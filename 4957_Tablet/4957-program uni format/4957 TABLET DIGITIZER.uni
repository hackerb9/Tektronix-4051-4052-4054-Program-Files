100 PRINT "4957 Tablet Driver for 4050 Series"110 INIT120 REM INITIALIZE THE 4050 COMM INTERFACE OPTION 1130 CALL "CMINIT"140 REM SET BAUD RATE TO 9600 7 DATA, EVEN PARITY, 1 STOP BIT150 CALL "RATE",9600,2,0160 REM NOTE THAT THE 4051 SHOULD USE:170 REM      CALL "RATE",2400,3,2180 REM AUTOBAUD IS ONLY FOR 4957, 4957 OPTION 02 USES DIP SWITCHES190 REM (REFER TO ORIGINAL 4957 MANUAL OR -01 MANUAL FOR OPTION 02)200 REM RESET THE COMMUNICATIONS INTERFACE BUFFER210 PRINT @40,30:220 REM IF USING A 4052A OR 4054A INCLUDE THE FOLLOWING:230 CALL "CMFLAG",1240 REM THE CMFLAG SETS THE INPUT FLAGGING FROM THE TABLET250 REM PRINT A SPACE TO THE TABLET TO SET AUTOBAUD FOR THE ORIG 4957260 REM PRINT @40:" "270 REM SEND RESET/CLEAR COMMAND280 PRINT @40:"Z"290 REM WAIT A FRACTION OF A SECOND FOR THE RESET OPERATION300 CALL "wait",0.2310 REM SEND SET FORMAT TO ASCII DATA320 PRINT @40:"Q"322 REM SEND SET TO 100 POINTS PER INCH324 PRINT @40:"C7"330 REM SET RATE TO 90 COORDINATE PAIRS PER SECOND FOR 4052A OR 4054A340 PRINT @40:"R6"350 REM IF USING A 4051 SET THE RATE TO 10 PAIRS/SEC:360 REM  PRINT@40:"R3"370 REM SET DATA COLLECITON MODE TO STREAM MODE380 PRINT @40:"M0"390 WINDOW 0,5850,0,5850400 REM RING BELL410 PRINT "";420 REM SET THE 4050 CHARACTER FONT TO 5 (GRAPHIC)430 PRINT @32,18:5450 INPUT @40:X,Y,F,T460 MOVE X,Y470 INPUT @40:X,Y,F,T480 GOSUB F+1 OF 510,550,580,620,660490 GOTO 470500 REM NO KEY PRESSED - PRINT CHARACTER (IN REFRESH MODE)510 MOVE X,Y520 PRINT @32,24:"|"530 RETURN540 REM KEY #1 - DRAW LINE550 DRAW X,Y560 RETURN570 REM KEY #2 - PRINT ASTERISK580 MOVE X,Y590 PRINT "*";600 RETURN610 REM KEY #3 - PRINT A DOT620 MOVE X,Y630 PRINT ".";640 RETURN650 REM KEY #4 - PRINT X660 MOVE X,Y670 PRINT "x";680 RETURN